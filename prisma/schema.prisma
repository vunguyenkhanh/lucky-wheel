generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Customer {
  id          Int          @id @default(autoincrement())
  fullName    String
  phoneNumber String       @unique
  address     String
  secretCode  String?
  createdAt   DateTime     @default(now())
  spinResults SpinResult[]
}

model Admin {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

model SecretCode {
  id            String    @id @default(uuid())
  code          String    @unique
  status        String    // "Chưa dùng", "Đã dùng", "Hết hạn"
  expirationDate DateTime
  usageCount    Int      @default(0)  // Số lần đã được sử dụng
  createdAt     DateTime  @default(now())
  customerId    Int?
  customer      Customer? @relation(fields: [customerId], references: [id])
}

model Prize {
  id          Int          @id @default(autoincrement())
  name        String
  imageUrl    String
  quantity    Int
  winRate     Float
  createdAt   DateTime     @default(now())
  spinResults SpinResult[]
}

model SpinResult {
  id         Int      @id @default(autoincrement())
  customerId Int
  prizeId    Int
  spinTime   DateTime @default(now())
  customer   Customer @relation(fields: [customerId], references: [id])
  prize      Prize    @relation(fields: [prizeId], references: [id])
}

model WheelConfig {
  id         Int      @id @default(1)
  colors     String[] // Mảng màu sắc cho vòng quay
  fontFamily String   @default("Arial") // Font chữ
  updatedAt  DateTime @updatedAt
}
