// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Admin {
  id       String @id @default(uuid())
  username String @unique
  password String
}

model Customer {
  id          String         @id @default(uuid())
  phoneNumber String         @unique
  password    String
  secretCode  String         @unique
  name        String
  histories   PrizeHistory[]
}

model Prize {
  id          String         @id @default(uuid())
  name        String
  imageUrl    String
  quantity    Int
  winRate     Float
  histories   PrizeHistory[]
}

model PrizeHistory {
  id         String   @id @default(uuid())
  customer   Customer @relation(fields: [customerId], references: [id])
  customerId String
  prize      Prize    @relation(fields: [prizeId], references: [id])
  prizeId    String
  spinTime   DateTime @default(now())
}
