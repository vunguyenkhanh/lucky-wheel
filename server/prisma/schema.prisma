// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Admin {
  id       String @id @default(uuid())
  username String @unique
  password String
}

model Customer {
  id          String         @id @default(uuid())
  name        String         // Họ và tên
  phoneNumber String         @unique  // Số điện thoại
  address     String         // Địa chỉ
  secretCode  String         @unique  // Mã bí mật được cấp bởi Admin
  histories   PrizeHistory[]
}

model SecretCode {
  id             String    @id @default(uuid())
  code           String    @unique  // Format: SHxxxx
  status         String    // "Chưa dùng", "Đã dùng", "Hết hạn"
  expirationDate DateTime  // Thời gian hết hạn
  customer       Customer? @relation(fields: [customerId], references: [id])
  customerId     String?
}

model Prize {
  id          String         @id @default(uuid())
  name        String
  imageUrl    String
  quantity    Int
  winRate     Float
  histories   PrizeHistory[]
}

model PrizeHistory {
  id         String   @id @default(uuid())
  customer   Customer @relation(fields: [customerId], references: [id])
  customerId String
  prize      Prize    @relation(fields: [prizeId], references: [id])
  prizeId    String
  spinTime   DateTime @default(now())
}
